doctype html
html
  head
    title MoviesApp
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    script(src='https://code.jquery.com/jquery-3.6.0.min.js')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.mb-3
      .container
        a.navbar-brand(href='/') MoviesApp
        ul.navbar-nav.ms-auto
          if !user
            li.nav-item
              a.nav-link(href='/users/login') Login
            li.nav-item
              a.nav-link(href='/users/register') Register
          else
            li.nav-item
              span.nav-link Hello #{user.username}
            li.nav-item
              a.nav-link(href='/users/logout') Logout
    .container
      if success_msg
        p.text-success= success_msg
      if error_msg
        p.text-danger= error_msg
      block content
