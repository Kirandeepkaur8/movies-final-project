extends layout

block content
  h1= movie.name
  p
    strong Year: 
    | #{movie.year}
  p
    strong Rating: 
    | #{movie.rating}
  p
    strong Genres: 
    | #{movie.genres.join(', ')}
  p
    strong Description:
    | #{movie.description}

  a.btn.btn-secondary(href='/') Back

  //- Show Edit/Delete only if logged-in user is owner
  if user && movie.postedBy && user._id == movie.postedBy._id
  a.btn.btn-primary(href=`/movies/edit/${movie._id}`) Edit
  form(method='POST', action=`/movies/delete/${movie._id}`, style='display:inline')
    button.btn.btn-danger(type='submit', onclick="return confirm('Are you sure?');") Delete
