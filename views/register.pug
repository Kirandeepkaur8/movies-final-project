extends layout

block content
  h1 Register

  if errors
    each error in errors
      p.text-danger= error.msg

  form(action="/users/register" method="POST")
    div.form-group
      label(for="name") Name
      input#name.form-control(type="text" name="name" value=name required)
    div.form-group
      label(for="email") Email
      input#email.form-control(type="email" name="email" value=email required)
    div.form-group
      label(for="password") Password
      input#password.form-control(type="password" name="password" required)
    div.form-group
      label(for="password2") Confirm Password
      input#password2.form-control(type="password" name="password2" required)
    button.btn.btn-primary(type="submit") Register
